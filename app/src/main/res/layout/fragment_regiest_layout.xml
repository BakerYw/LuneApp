<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="com.nyw.lune.ui.fragment.RegiestFragment.ProxyClick" />

        <variable
            name="viewmodel"
            type="com.nyw.lune.viewmodel.state.RegiestViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:fadeScrollbars="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_57"
                android:layout_marginRight="@dimen/dp_57"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_119"
                    android:layout_height="@dimen/dp_39"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_14"
                    android:src="@drawable/icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号信息"
                    android:textColor="@color/colorBlack333"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_19"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/ic_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_11">

                    <TextView
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="wrap_content"
                        android:text="手机号码"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入你的手机号码"
                        android:inputType="phone"
                        android:lines="1"
                        android:text="@={viewmodel.mobile}"
                        android:maxLength="11"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/ic_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_11">

                    <TextView
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="wrap_content"
                        android:text=" 验 证 码"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="text"
                        android:lines="1"
                        android:text="@={viewmodel.smsCode}"
                        android:maxLength="4"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9" />
                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@={viewmodel.codetip}"
                        android:gravity="center"
                        android:textSize="@dimen/sp_9"
                        android:textColor="@{viewmodel.mCodeColor}"
                        android:enabled="@{viewmodel.canGetCode}"
                        android:onClick="@{()->click.getCode()}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/ic_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_11">

                    <TextView
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="wrap_content"
                        android:text=" 密      码"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:text="@={viewmodel.password}"
                        bind:showPwd="@{viewmodel.isShowPwd}"
                        android:maxLength="20"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:button="@drawable/keyvisibily_selector"
                        android:checked="false"
                        android:visibility="@{viewmodel.passwordVisible}"
                        bind:checkChange="@{click.onCheckedChangeListener}" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/ic_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_11">

                    <TextView
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="wrap_content"
                        android:text=" 机 构 码"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入机构码"
                        android:inputType="text"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:lines="1"
                        android:text="@={viewmodel.orgCode}"
                        android:maxLength="20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textColor="@color/colorBlack333"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_19"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/ic_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_11">

                    <TextView
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="wrap_content"
                        android:text=" 姓      名"
                        android:gravity="center|left"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入你的姓名"
                        android:text="@={viewmodel.realName}"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="20"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/ic_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_11">

                    <TextView
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="wrap_content"
                        android:text=" 学      校"
                        android:gravity="center|left"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入你的学校名称"
                        android:text="@={viewmodel.school}"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="20"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/ic_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_11">

                    <TextView
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="wrap_content"
                        android:text=" 年      级"
                        android:gravity="center|left"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请选择所在年级"
                        android:inputType="text"
                        android:text="@={viewmodel.clbum}"
                        android:onClick="@{()->click.select()}"
                        android:lines="1"
                        android:maxLength="20"
                        android:gravity="center|left"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9" />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/ic_select_age"
                        android:onClick="@{()->click.select()}" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/ic_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_11">

                    <TextView
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="wrap_content"
                        android:text=" 分      数"
                        android:gravity="center|left"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入测试分数"
                        android:inputType="text"
                        android:lines="1"
                        android:text="@={viewmodel.score}"
                        android:maxLength="20"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>
                <TextView
                    android:id="@+id/regiestSub"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:background="@drawable/button_selector"
                    android:gravity="center"
                    android:text="立即注册"
                    android:onClick="@{()->click.regiest()}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>