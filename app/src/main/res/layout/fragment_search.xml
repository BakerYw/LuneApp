<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.nyw.lune.ui.fragment.SearchFragment.ProxyClick" />

        <variable
            name="viewmodel"
            type="com.nyw.lune.viewmodel.state.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragment.SearchFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/search_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <include layout="@layout/include_toolbar" />
            <include layout="@layout/include_search_layout" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/box_tip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="@dimen/dp_87"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_search_null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="还没输入单词哦~"
                        android:textColor="@color/colorBlack999"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_15"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="black"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加入生词本"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9"
                        android:paddingLeft="@dimen/dp_9"
                        android:paddingRight="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/button_selector"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="黑色的"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_12"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name"/>
                    <LinearLayout
                        android:id="@+id/ll_english"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_25"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_desc">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="英：/blæk/"
                            android:textColor="@color/colorBlack333"
                            android:textSize="@dimen/sp_9"
                            />
                        <ImageView
                            android:layout_width="@dimen/dp_9"
                            android:layout_height="@dimen/dp_9"
                            android:src="@drawable/ic_listen"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_america"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_25"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_english">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美：/blæk/"
                            android:textColor="@color/colorBlack333"
                            android:textSize="@dimen/sp_9"
                            />
                        <ImageView
                            android:layout_width="@dimen/dp_9"
                            android:layout_height="@dimen/dp_9"
                            android:src="@drawable/ic_listen"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_25"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_america">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="国际：/blæk/"
                            android:textColor="@color/colorBlack333"
                            android:textSize="@dimen/sp_9"
                            />
                        <ImageView
                            android:layout_width="@dimen/dp_9"
                            android:layout_height="@dimen/dp_9"
                            android:src="@drawable/ic_listen"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/v_line"
                        android:layout_width="@dimen/dp_2"
                        android:layout_height="@dimen/dp_15"
                        android:background="@color/colorAccent"
                        android:layout_marginTop="@dimen/dp_15"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_all"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中文释义"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9"
                        android:layout_marginLeft="@dimen/dp_10"
                        app:layout_constraintTop_toTopOf="@+id/v_line"
                        app:layout_constraintBottom_toBottomOf="@+id/v_line"
                        app:layout_constraintLeft_toRightOf="@+id/v_line"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_tip"
                        android:textColor="@color/colorBlack333"
                        android:textSize="@dimen/sp_9"
                        android:layout_marginTop="@dimen/dp_12"
                        app:layout_constraintTop_toBottomOf="@+id/v_line"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_bottom"
            android:onClick="@{()->click.showDialog()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>