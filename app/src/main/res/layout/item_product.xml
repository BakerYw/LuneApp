<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/product_img"
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_87"
        android:scaleType="fitXY"
        android:src="@drawable/ic_default_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/product_name"
        android:layout_width="@dimen/dp_87"
        android:layout_height="wrap_content"
        tools:text="学生读本-精彩的世界精彩的世界"
        android:textColor="@color/colorBlack333"
        android:textSize="@dimen/sp_8"
        android:padding="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/product_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="价格\t0"
        android:textColor="@color/colorBlack333"
        android:textSize="@dimen/sp_8"
        android:paddingLeft="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        app:layout_constraintLeft_toLeftOf="@+id/product_img"/>
    <TextView
        android:id="@+id/product_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="已购买"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_8"
        android:visibility="visible"
        android:paddingEnd="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        app:layout_constraintRight_toRightOf="@+id/product_img"/>
</androidx.constraintlayout.widget.ConstraintLayout>