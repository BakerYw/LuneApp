<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_14"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/left_layout"
        android:layout_width="@dimen/dp_68"
        android:layout_height="@dimen/dp_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_default_pic"/>
        <ImageView
            android:id="@+id/collect"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:scaleType="fitXY"
            android:src="@drawable/ic_collect"
            android:layout_gravity="left|top"/>
    </FrameLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="学生读本—精彩的世界精彩的世界精彩界精彩的世界精彩的世界精彩界精"
        android:textColor="@color/colorBlack333"
        android:maxLength="12"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        app:layout_constraintRight_toLeftOf="@+id/share"
        app:layout_constraintLeft_toRightOf="@+id/left_layout"/>
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="作者 系统词库"
        android:textColor="@color/colorBlack333"
        android:textSize="@dimen/sp_10"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="@+id/title"/>
    <TextView
        android:id="@+id/people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="作者 系统词库"
        android:textColor="@color/colorBlack333"
        android:textSize="@dimen/sp_10"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/author"
        app:layout_constraintLeft_toLeftOf="@+id/author"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="作者 系统词库"
        android:textColor="@color/colorBlack333"
        android:textSize="@dimen/sp_10"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/people"
        app:layout_constraintLeft_toLeftOf="@+id/people"/>
    <ImageView
        android:id="@+id/share"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:src="@drawable/ic_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>