<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_38"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_14"
    android:paddingRight="@dimen/dp_5">

    <!--搜索、取消按钮-->
    <TextView
        android:id="@+id/tv_search_view"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:text="@string/search"
        android:textColor="@color/colorBlack333"
        android:textSize="@dimen/sp_9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_toStartOf="@id/tv_search_view"
        android:background="@drawable/shape_ef_2">
        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/ic_search_icon"
            android:scaleType="fitXY"/>
        <!--文本输入框-->
        <EditText
            android:id="@+id/et_search_view"
            style="@style/style_edit_text_common_no_background_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:textSize="@dimen/sp_9"
            android:imeOptions="actionSearch"
            android:layout_marginStart="@dimen/dp_5"
            android:hint="@string/et_search_hint"
            android:background="@android:color/transparent"/>
    </LinearLayout>


</RelativeLayout>